@model IEnumerable<Category>

<h1>Kategori Listesi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Kategori Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Adı</th>
            <th>Oluşturulmuş</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@category.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
