@model IEnumerable<Restorix.Models.Product>

@{
    ViewData["Title"] = "Ürünler";
}


<div class="card ">
    <div class="card-body ">
        <table class="table">
            <thead>
                <tr>
                    <th>İSİM</th>
                    <th>FİYAT</th>
                    <th>KATEGORİ</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Products)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Category.Name</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">DÜZENLE</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">SİL</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <p>
            <a asp-action="Create" class="btn btn-primary align-self-end">YENİ ÜRÜN EKLE</a>
        </p>
    </div>
</div>